<Window x:Class="Editor.Windows.WindowForEditNaim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor.Windows"
        mc:Ignorable="d"
        Title="Введите наименование" Height="100" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textbox" Text="{Binding Naim}" PreviewKeyDown="textbox_PreviewKeyDown"/>
        <Button Grid.Row="1" Content="Ввод" Click="Button_Click"/>
    </Grid>
</Window>
