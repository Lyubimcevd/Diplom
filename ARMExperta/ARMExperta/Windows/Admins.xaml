<Window x:Class="ARMExperta.Windows.Admins"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARMExperta.Windows"
        mc:Ignorable="d"
        Title="Администраторы" Height="300" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox Grid.RowSpan="5" 
                 Name="listbox" MouseDoubleClick="listbox_MouseDoubleClick"/>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="ФИО: "/>
            <TextBox Grid.Column="1" 
                     Name="textbox_fio"/>
            <TextBlock Grid.Row="1" 
                       Text="Пароль: "/>
            <PasswordBox Grid.Column="1" 
                     Grid.Row="1" 
                     Name="passwordbox"/>
        </Grid>
        <Button Grid.Column="1" 
                Grid.Row="1"
                Content="Добавить" 
                Click="AddNewAdmin"/>
        <Button Grid.Column="1" 
                Grid.Row="2" 
                Content="Изменить" 
                Click ="ChangeChoiceAdmin"
                IsEnabled="False"
                Name="change"/>
        <Button Grid.Column="1" 
                Grid.Row="3" 
                Content="Удалить" 
                Click="DeleteChoiceAdmin"
                IsEnabled="False"
                Name="delete"/>
    </Grid>
</Window>
